@model List<MvcApplication4.Models.product>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{
    ViewBag.Title = "View Product";
}

<h2> View Product</h2>

<div class="bs-example" data-example-id="contextual-table" style="border: 1px solid #eee">
    <table class="table">
      <thead>
        <tr>
          <th>Gender</th>
          <th>Category</th>
          <th>Brand</th>
          <th>Picture</th>
        </tr>
      </thead>



@foreach (var item in Model) {
    <tr>
        <td>
           @item.gender
        </td>
        <td>
            @item.category
        </td>
        <td>
           @item.brand
        </td>
        <td>
           @item.picture
        </td>
        <td>
            @Html.ActionLink("Edit", "EditProduct", new { id=item.Id }) |
            @Html.ActionLink("Delete", "DeleteProduct", new { id=item.Id })
        </td>
    </tr>
}

</table>
    </div>